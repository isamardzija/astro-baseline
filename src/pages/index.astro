---
import Base from "../layouts/Base.astro";
import { site } from "../content/site";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: site.name,
  url: site.url,
  inLanguage: site.locale
};
---

<Base
  title={site.name}
  description={site.description}
  canonicalPath="/"
  jsonLd={jsonLd}
>
  <article class="prose">
    <h1>{site.tagline}</h1>
    <p class="lead">{site.description}</p>

    <section class="block">
      <h2>What this is</h2>
      <p>
        Astro Baseline is a boring starter: clear structure, SEO defaults, and minimal CSS.
        No UI kit. No framework runtime.
      </p>
    </section>

    <section class="block">
      <h2>Next steps</h2>
      <ul>
        <li>Customize <code>src/content/site.ts</code></li>
        <li>Adjust tokens in <code>src/styles/partials/tokens.css</code></li>
        <li>Add your pages and components</li>
      </ul>
    </section>
  </article>
</Base>
